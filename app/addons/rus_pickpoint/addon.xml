<?xml version="1.0"?>
<addon scheme="3.0">
    <id>rus_pickpoint</id>
    <version>1.0.0</version>
    <priority>9600</priority>
    <status>active</status>
    <default_language>ru</default_language>
    <compatibility>
        <core_version>
            <min>4.2.1</min>
        </core_version>
        <core_edition>
            ULTIMATE
        </core_edition>
    </compatibility>
    <settings layout="separate" edition_type="ROOT,ULT:VENDOR">
        <sections>
            <section id="general">
                <items>
                    <item id="login">
                        <type>input</type>
                    </item>
                    <item id="password">
                        <type>input</type>
                    </item>
                    <item id="ikn">
                        <type>input</type>
                    </item>
                    <item id="secure_protocol">
                        <type>checkbox</type>
                        <default_value>N</default_value>
                    </item>
                    <item id="server">
                        <type>selectbox</type>
                        <variants>
                            <item id="test">
                            </item>
                            <item id="work">
                            </item>
                        </variants>
                        <default_value>work</default_value>
                    </item>
                    <item id="update">
                        <type>header</type>
                    </item>
                    <item id="settings">
                        <type>template</type>
                        <default_value>settings.tpl</default_value>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
    <functions>
        <item for="install">fn_rus_pickpoint_install</item>
        <item for="uninstall">fn_rus_pickpoint_uninstall</item>
    </functions>
</addon>